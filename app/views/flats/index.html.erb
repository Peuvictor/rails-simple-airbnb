<!-- app/views/flats/index.html.erb -->
<div class="container mt-5">
  <h1>Flats</h1>
  <%= link_to 'New Flat', new_flat_path, class: "btn btn-primary mb-3" %>
  <ul class="list-group">
    <% @flats.each do |flat| %>
      <li class="list-group-item">
        <%= link_to flat.name, flat_path(flat) %>
        <%= link_to 'Edit', edit_flat_path(flat), class: "btn btn-outline-primary btn-sm float-end" %>
        <%= link_to 'Delete', flat_path(flat), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm float-end me-2" %>
      </li>
    <% end %>
  </ul>
</div>
